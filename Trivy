name: Trivy Scan

on:
  push:
    branches:
      - main

jobs:
  trivy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      - name: Run Trivy
        run: |
          # Install Trivy (if not already installed)
          curl -sfL https://install.trivy.io | sh -s -- -b /usr/local/bin

          # Scan container image
          trivy image <your-image-name>

